---
import Layout from '../layouts/Layout.astro';

// Array to hold community channel information for easy management
const communityChannels = [
  {
    name: 'X (Twitter)',
    description: 'Follow for official announcements, breaking news, and to engage with the wider crypto community.',
    link: 'https://x.com/Singular_SNG',
    cta: 'Follow on X',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="currentColor"><path d="M18.901 1.153h3.68l-8.04 9.19L24 22.846h-7.406l-5.8-7.584-6.638 7.584H.474l8.6-9.83L0 1.154h7.594l5.243 6.932L18.901 1.153zm-1.61 19.931h2.5L5.437 2.16H2.83l14.461 18.924z"/></svg>`
  },
  {
    name: 'Discord',
    description: 'Join real-time discussions, ask questions, and participate in governance debates with the core community.',
    link: 'https://discord.com/invite/qpuSs3xPDU',
    cta: 'Join Server',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="currentColor"><path d="M19.54 0c1.356 0 2.46 1.104 2.46 2.472v21.528l-2.58-2.28-1.452-1.344-1.536-1.428.636-2.22-.636-2.22s.708-1.14 1.572-2.952c2.448-5.028 1.5-5.88-1.572-5.88-3.264 0-4.404 1.416-4.404 1.416s-2.52-3.108-6.924-3.108c-4.404 0-6.924 3.108-6.924 3.108s-1.14-1.416-4.404-1.416c-3.072 0-3.996.852-1.572 5.88 1.008 2.052 1.572 2.952 1.572 2.952s-.552 1.944-.636 2.22l.636 2.22-1.536 1.428-1.452 1.344-2.58 2.28v-21.528c0-1.368 1.104-2.472 2.46-2.472h19.08zm-4.704 12.444c-1.224 0-2.22 1.212-2.22 2.7s.996 2.7 2.22 2.7c1.224 0 2.22-1.212 2.22-2.7s-.996-2.7-2.22-2.7zm-6.024 0c-1.224 0-2.22 1.212-2.22 2.7s.996 2.7 2.22 2.7c1.224 0 2.22-1.212 2.22-2.7s-.996-2.7-2.22-2.7z"/></svg>`
  },
  {
    name: 'Telegram',
    description: 'Get real-time announcements, news, and engage in fast-paced chat with other members of the Singular community.',
    link: 'https://t.me/+qXlxA0ddJGQwZjY0',
    cta: 'Join Channel',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="currentColor"><path d="M9.78 18.65l.288-4.233l8.328-7.76l-11.454 6.55l-1.92 5.078l3.756-1.635zM22.25 12c.308-1.943-.458-3.83-2.04-5.414S16.452 4.25 14.5 4.5s-3.543 1.261-5.128 2.845S6.25 10.557 6.5 12.5s1.261 3.543 2.845 5.128s3.185 2.128 5.128 1.872s3.83-.457 5.414-2.04S21.943 13.943 22.25 12zM12 2c5.523 0 10 4.477 10 10s-4.477 10-10 10S2 17.523 2 12S6.477 2 12 2z"/></svg>`
  },
  {
    name: 'Reddit',
    description: 'Participate in long-form discussions, post analysis, and help shape the narrative in our official subreddit.',
    link: 'https://www.reddit.com/r/SingularCrypto/',
    cta: 'Visit Subreddit',
    icon: `<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm4.5 9.4a1.4 1.4 0 1 1 0 2.8 1.4 1.4 0 0 1 0-2.8zm-9 0a1.4 1.4 0 1 1 0 2.8 1.4 1.4 0 0 1 0-2.8zm4.5 4.5c-1.8 0-3.3-1.2-3.8-2.8h7.6c-.5 1.6-2 2.8-3.8 2.8z"/></svg>`
  }
];
---

<Layout title="Community | Singular">
  <div class="max-w-4xl mx-auto px-4 py-8 md:py-16">
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Join the Singular Community</h1>
      <p class="text-lg text-gray-300">Our community is the heart of the protocol. Join us to discuss, debate, and build the future of decentralized investment.</p>
    </div>

    <div class="grid md:grid-cols-1 gap-8">
      {communityChannels.map(channel => (
        <a href={channel.link} target="_blank" rel="noopener noreferrer" class="block bg-gray-900/50 p-6 rounded-lg border border-gray-700 hover:border-blue-500 hover:bg-gray-800/50 transition-all duration-300">
          <div class="flex items-center gap-6">
            <div class="flex-shrink-0 text-blue-400" set:html={channel.icon} />
            <div class="flex-grow">
              <h2 class="text-2xl font-bold">{channel.name}</h2>
              <p class="text-gray-400 mt-1">{channel.description}</p>
            </div>
            <div class="flex-shrink-0">
              <span class="btn">{channel.cta}</span>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</Layout>
